# Database Configuration
DATABASE_URL=postgresql://fenix:fenix_password@localhost:5432/fenix
POSTGRES_DB=fenix
POSTGRES_USER=fenix
POSTGRES_PASSWORD=fenix_password

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Environment
ENVIRONMENT=production
DEBUG=false

# API Keys - AI Services
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CRAWL4AI_API_KEY=your_crawl4ai_api_key_here

# Google Sheets Integration
GOOGLE_CREDENTIALS_FILE=credentials.json
GOOGLE_SHEET_ID=your_google_sheet_id

# Asana Integration
ASANA_ACCESS_TOKEN=your_asana_access_token
ASANA_PROJECT_ID=your_asana_project_id

# SAM.gov API
SAM_GOV_API_KEY=your_sam_gov_api_key

# Dodge Construction API (if available)
DODGE_API_KEY=your_dodge_api_key

# Security
SECRET_KEY=your_secret_key_here_minimum_32_characters
JWT_SECRET_KEY=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/fenix.log

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10MB

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Scraping Configuration
DEFAULT_SCRAPING_INTERVAL=3600  # seconds
MAX_CONCURRENT_SCRAPING_JOBS=5
SCRAPING_TIMEOUT=300  # seconds

# Browser Configuration (Playwright)
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000  # milliseconds

# === MONITORING SYSTEM CONFIGURATION ===

# E-mail Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
DEFAULT_NOTIFICATION_EMAIL=recipient1@example.com,recipient2@example.com

# Monitoring Configuration
MONITORING_ENABLED=true
DAILY_SCAN_HOUR=8
DAILY_SCAN_MINUTE=0
MONITORING_KEYWORDS=windows,doors,glazing,fenestration,curtain wall,storefront,facade,window installation,door installation,renovation,alteration,construction,building,residential,commercial
MONITORING_SOURCES=sam.gov,construction.com,dodge,nyc.opendata,shovels.ai

# Deduplication Configuration
DEDUPLICATION_SIMILARITY_THRESHOLD=0.8
MAX_STORED_TENDERS=10000
MIN_RELEVANCE_SCORE=0.0

# Data Retention Configuration
TENDER_RETENTION_DAYS=90
JOB_RETENTION_DAYS=30
NOTIFICATION_RETENTION_DAYS=60

# Shovels AI Configuration
SHOVELS_AI_API_KEY=your_shovels_ai_api_key

# CELERY WORKER
CELERY_WORKER_CONCURRENCY=1
CELERY_WORKER_MAX_TASKS_PER_CHILD=10
CELERY_WORKER_PREFETCH_MULTIPLIER=1
